<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Responsabiliad Form-->
        <record id="aprgt_responsabilidad_form" model="ir.ui.view">
            <field name="name">aprgt.responsabilidad.form</field>
            <field name="model">aprgt.responsabilidad</field>
            <field name="arch" type="xml">
                <form string="Responsabilidad">
                    <sheet string="Responsabilidad">
                        <field name="id" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

