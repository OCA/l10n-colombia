<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--RUT Tree-->
        <record model="ir.ui.view" id="aprgt_registro_unico_tributario_tree">
            <field name="name">aprgt.registro.unico.tributario.tree</field>
            <field name="model">aprgt.registro.unico.tributario</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="numero_formulario"/>
                    <field name="concepto"/>
                    <field name="tipo_contribuyente"/>
                    <field name="numero_identificacion_tributaria"/>
                    <field name="digito_verificacion"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!--RUT Form-->
        <record model="ir.ui.view" id="aprgt_registro_unico_tributario_form">
            <field name="name">aprgt.registro.unico.tributario.form</field>
            <field name="model">aprgt.registro.unico.tributario</field>
            <field name="arch" type="xml">
                <form string="RUT">
                    <header></header>
                    <sheet string="RUT">
                        <field name="id" invisible="1"/>
                        <field name="lugar_expedicion_apcty_has_cities" invisible="1"/>
                        <field name="ubicacion_apcty_has_cities" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title" name="title">
                            <label for="numero_formulario" class="oe_edit_only"/>
                            <h2>
                                <field name="numero_formulario" attrs="{'readonly':[('id','>',0)]}"/>
                            </h2>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons"/>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="numero_identificacion_tributaria"/>
                                <field name="direccion_seccional_id"/>
                            </group>
                            <group>
                                <field name="concepto"/>
                                <field name="digito_verificacion"/>
                                <field name="buzon_electronico"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="anexos"/>
                                <field name="fecha"/>
                                <field name="cargo"/>
                            </group>
                            <group>
                                <field name="numero_folios"/>
                                <field name="nombre"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Identificación" name="identificacion">
                                <group string="Identificación">
                                    <group>
                                        <field name="tipo_contribuyente"/>
                                        <field name="numero_identificacion"/>
                                    </group>
                                    <group>
                                        <field name="tipo_documento"/>
                                        <field name="fecha_expedicion"/>
                                    </group>
                                </group>
                                <group string="Lugar de Expedición" name="lugar_expedicion">
                                    <group>
                                        <field name="lugar_expedicion_country_id"/>
                                        <field name="lugar_expedicion_city" class="o_address_city"
                                               attrs="{'invisible': [('lugar_expedicion_apcty_has_cities','=',True)]}"/>
                                        <field name="lugar_expedicion_apcty_city_id" class="o_address_city"
                                               options='{"no_open": True}'
                                               attrs="{'invisible': [('lugar_expedicion_apcty_has_cities','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="lugar_expedicion_state_id"/>
                                    </group>
                                </group>
                                <group string="Nombres Persona Natural" attrs="{'invisible': ['|',('tipo_contribuyente','=','1'),('tipo_contribuyente','=',False)]}">
                                    <group>
                                        <field name="primer_apellido"/>
                                        <field name="primer_nombre"/>
                                    </group>
                                    <group>
                                        <field name="segundo_apellido"/>
                                        <field name="otros_nombres"/>
                                    </group>
                                </group>
                                <group string="Nombres Persona Jurídica" attrs="{'invisible': ['|',('tipo_contribuyente','=','2'),('tipo_contribuyente','=',False)]}"></group>
                                <group attrs="{'invisible': ['|',('tipo_contribuyente','=','2'),('tipo_contribuyente','=',False)]}">
                                    <field name="razon_social"/>
                                </group>
                                <group attrs="{'invisible': ['|',('tipo_contribuyente','=','2'),('tipo_contribuyente','=',False)]}">
                                    <group>
                                        <field name="nombre_comercial"/>
                                    </group>
                                    <group>
                                        <field name="sigla"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Ubicación" name="ubicacion">
                                <group string="Ubicación">
                                    <group>
                                        <field name="ubicacion_country_id"/>
                                        <field name="ubicacion_city" attrs="{'invisible': [('ubicacion_apcty_has_cities','=',True)]}"/>
                                        <field name="ubicacion_apcty_city_id" attrs="{'invisible': [('ubicacion_apcty_has_cities','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="ubicacion_state_id"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="direccion_principal"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="correo_electronico"/>
                                        <field name="telefono1"/>
                                    </group>
                                    <group>
                                        <field name="codigo_postal"/>
                                        <field name="telefono2"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Clasificación" name="clasificacion">
                                <group>
                                    <group>
                                        <field name="numero_establecimientos"/>
                                    </group>
                                </group>
                                <group string="Clasificación">
                                    <field name="clasificacion_ids" nolabel="1" widget="one2many_list" mode="tree"
                                           context="{'default_aprgt_registro_unico_tributario': id}">
                                        <tree editable="bottom">
                                            <field name="tipo"/>
                                            <field name="fecha_inicio"
                                                   attrs="{'required': [('tipo','in',('principal','secundaria'))],
                                                    'invisible': ['|',('tipo','in',('otra',)),('tipo','=',False)]}"/>
                                            <field name="actividad_economica"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Responsabilidades, Calidades y Atributos" name="responsabilidades_calidades_atributos">
                                <group string="Responsabilidades, Calidades y Atributos">
                                    <field name="responsabilidad_ids" widget="many2many_tags" options="{'no_create': False}"/>
                                </group>
                            </page>
                            <page string="Obligados Aduaneros" name="obligados_aduaneros">
                                <group string="Obligados Aduaneros">
                                    <field name="usuario_aduanero_ids" widget="many2many_tags" options="{'no_create': False}"/>
                                </group>
                            </page>
                            <page string="Exportadores" name="exportadores">
                                <group>
                                    <group>
                                        <field name="forma_exportacion"/>
                                    </group>
                                    <group>
                                        <field name="tipo_exportacion"/>
                                    </group>
                                </group>
                                <group string="Exportadores">
                                    <field name="exportador_ids" nolabel="1" widget="one2many_list" mode="tree"
                                           context="{'default_aprgt_registro_unico_tributario': id}">
                                        <tree editable="bottom">
                                            <field name="modo"/>
                                            <field name="cpc"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>