<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Company view -->
  <!-- <delete model="ir.ui.view"  id="l10n_co_geo.view_company_form_inherit_city"/> -->
  <record model="ir.ui.view" id="view_company_form_inherit_city">
    <field name="name">company.form.city</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form" />
    <field name="type">form</field>
    <field name="arch" type="xml">
      <field name="city" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
      <field name="city" position="after">
        <field name="city_id" placeholder="City" class="o_address_city" options="{'no_open': True}"
          domain="[('state_id', '=?', state_id), ('country_id', '=?', country_id)]"
          context="{'default_country_id': country_id, 'default_state_id': state_id}"
        /></field>
      <field name="state_id" position="attributes">
        <attribute name="on_change" />
        <attribute name="domain">[('country_id', '=?', country_id)]</attribute>
        <attribute name="context">{'default_country_id': country_id}</attribute>
      </field>
    </field>
  </record>
</odoo>

