<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="appnr_base_view_partner_simple_form" model="ir.ui.view">
            <field name="name">appnr.base.res.partner.simplified.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//h1//field[@name='name']/.." position="before">
                        <group attrs="{'invisible': [('is_company', '=', True)]}">
                            <field name="appnr_primer_nombre" attrs=
                                    "{'required': [('is_company', '=', False)]}"/>
                            <field name="appnr_otros_nombres"/>
                            <field name="appnr_primer_apellido" attrs=
                                    "{'required': [('is_company', '=', False)]}"/>
                            <field name="appnr_segundo_apellido"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="appnr_base_view_partner_form" model="ir.ui.view">
            <field name="name">appnr.base.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//h1//field[@name='name']/../.." position="after">
                        <div class="oe_edit_only">
                            <group>
                                <group attrs="{'invisible': [('is_company', '=', True)]}">
                                    <field name="appnr_primer_nombre" attrs=
                                            "{'required': [('is_company', '=', False)]}"/>
                                    <field name="appnr_otros_nombres"/>
                                    <field name="appnr_primer_apellido" attrs=
                                            "{'required': [('is_company', '=', False)]}"/>
                                    <field name="appnr_segundo_apellido"/>
                                </group>
                                <group>
                                    <field name="appnr_naturaleza"/>
                                    <field name="appnr_tipo_documento"/>
                                    <field name="appnr_numero_identificacion"/>
                                    <field name="appnr_digito_verificacion"
                                           attrs="{'invisible': [('appnr_tipo_documento', '!=', '31')],
                                           'required': [('appnr_tipo_documento', '=', '31')]}"/>
                                </group>
                            </group>
                        </div>
                    </xpath>
                    <!-- Modify inner contact form of child_ids -->
                    <xpath expr="//field[@name='child_ids']/form//field[@name='name']"
                           position="after">
                        <div class="oe_edit_only" colspan="2">
                            <field name="is_company" invisible="True"/>
                            <group attrs="{'invisible': [('is_company', '=', True)]}">
                                <field name="appnr_primer_nombre" attrs=
                                        "{'required': [('type', '=', 'contact')]}"/>
                                <field name="appnr_otros_nombres"/>
                                <field name="appnr_primer_apellido" attrs=
                                        "{'required': [('type', '=', 'contact')]}"/>
                                <field name="appnr_segundo_apellido"/>
                            </group>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
